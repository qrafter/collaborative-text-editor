{
  "name": "web-server",
  "version": "1.1.0",
  "main": "index.js",
  "repository": "https://github.com/aldrin-lim/mvp-server.git",
  "author": "Aldrin Lim <aldrinlim81@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "rm -rf ./dist && NODE_ENV=dev nodemon",
    "yjs": "rm -rf ./dist && NODE_ENV=dev nodemon --config nodemon-yjs.json",
    "seed": "rm -rf ./dist && yarn build && NODE_ENV=production node -r dotenv/config -r @swc-node/register -r tsconfig-paths/register dist/db/seed.js",
    "format": "prettier --write .",
    "build": "swc ./src -d dist -s ",
    "start": "NODE_ENV=production node -r @swc-node/register -r tsconfig-paths/register dist/server.js",
    "start:yjs": "NODE_ENV=production node -r @swc-node/register -r tsconfig-paths/register dist/yjs-server.js",
    "test": "NODE_ENV=test yarn build && NODE_ENV=test jest --runInBand ",
    "test:watch": "NODE_ENV=test yarn build && NODE_ENV=test jest --watch",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/ormconfig.ts",
    "migration:generate": "yarn build && node -r dotenv/config -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d dist/db/datasource.js src/migrations/migration",
    "migration:run": "rm -rf ./dist && yarn build && node -r dotenv/config -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d dist/db/datasource.js",
    "migration:down": "rm -rf ./dist && yarn build && node -r dotenv/config -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d dist/db/datasource.js",
    "migration:show": "rm -rf ./dist && yarn build && node -r dotenv/config -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:show -d dist/db/datasource.js"
  },
  "dependencies": {
    "@graphql-yoga/node": "^3.9.1",
    "@swc-node/register": "^1.10.9",
    "@types/express": "^4.17.17",
    "apollo-server-express": "^3.13.0",
    "bcryptjs": "^2.4.3",
    "connect-timeout": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-jwt": "^8.4.1",
    "express-oauth2-jwt-bearer": "^1.5.0",
    "graphql": "^16.9.0",
    "graphql-ws": "^5.16.0",
    "graphql-yoga": "^5.7.0",
    "helmet": "^7.0.0",
    "js-base64": "^3.7.7",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "pg": "^8.11.3",
    "quill-delta": "^5.1.0",
    "reflect-metadata": "^0.1.13",
    "response-time": "^2.3.2",
    "socket.io": "^4.8.0",
    "type-graphql": "^2.0.0-rc.2",
    "typeorm": "^0.3.17",
    "typescript": "*",
    "uuid": "^10.0.0",
    "winston": "^3.10.0",
    "ws": "^8.18.0",
    "y-websocket": "^2.0.4",
    "yjs": "^13.6.18",
    "yoga": "^0.0.20"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.87",
    "@types/bcryptjs": "^2.4.6",
    "@types/connect-timeout": "^0.0.39",
    "@types/cors": "^2.8.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/response-time": "^2.3.8",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "chalk": "4.1.2",
    "concurrently": "^9.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "tsconfig-paths": "^4.2.0"
  }
}
